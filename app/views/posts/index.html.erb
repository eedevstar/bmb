<div class="col-md-8">
  <%= turbo_stream_from "posts" %>

  <%= turbo_frame_tag "posts" do %>
    <%= render @posts %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% end %>
</div>
<div class="col-md-4">
  <div class="p-4 mb-3 bg-light rounded">
    <h4 class="fst-italic">Welcome <%= current_user.name %></h4>
    <hr/>
    <p class="mb-0">
      My Posts: <%= Post.user_records(current_user.id).count %>
      <br/>
      Total Posts: <%= Post.all.count %>
    </p>
    <%= render "modal_new", post: @post %>
  </div>
</div>
