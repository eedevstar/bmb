<div class="col-md-8">
  <%= turbo_stream_from :posts %>

  <%= turbo_frame_tag :posts do %>
    <%= render @posts %>
    <% if @posts.count > 0 %>
      <%== pagy_bootstrap_nav(@pagy) %>
    <% else %>
      <h4 class="text-center">No Posts</h4>
    <% end %>
  <% end %>
</div>
<div class="col-md-4">
  <div class="p-4 mb-3 bg-light rounded">
    <% if user_signed_in? %>
      <h4 class="fst-italic">Welcome <%= current_user.name %></h4>
      <hr/>
      <p class="mb-2">
        My Posts: <%= Post.user_records(current_user.id).count %>
      </p>
      <%= render "modal_new", post: @post %>
      <hr/>
    <% end %>

    <p class="mb-1">
      Total Posts: <%= Post.all.count %>
    </p>

  </div>
</div>
