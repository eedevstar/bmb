<%= link_to "Edit", edit_post_path(post) , id: dom_id(post, :edit),
                class: "btn btn-sm btn-outline-primary" %>

<%= link_to "Delete", post_path(post), id: dom_id(post, :delete), method: :delete,
                data: {
                        "turbo-method": "DELETE",
                        "turbo-confirm": "Are you sure?",
                        "turbo-frame": "_top"
                      },
                class: "btn btn-sm btn-outline-danger" %>
