<div class="row flex-nowrap justify-content-between align-items-center py-2 border-bottom">
  <div class="col-4 pt-1">

  </div>
  <div class="col-4 text-center">
    <h1>Message Board</h1>
  </div>
  <div class="col-4 d-flex justify-content-end align-items-center">
    <% if user_signed_in? %>
      <%= link_to 'New Post', new_post_path, :class => "btn btn-sm btn-outline-secondary mx-2" %>
      <%= link_to "Log Out", destroy_user_session_path, :class => "btn btn-sm btn-outline-secondary" %>
    <% else %>
      <%= link_to "Log In", new_user_session_path, :class => "btn btn-sm btn-outline-secondary" %>
    <% end %>
  </div>
</div>
